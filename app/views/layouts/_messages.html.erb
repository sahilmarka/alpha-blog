<% if flash.any? %>
    <div class="container">
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <% flash.each do |key,value| %>
                <h4 class="alert-heading"><%= value %></h4>
            <%end%>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            </button>
        </div>
    </div>
<%end%>